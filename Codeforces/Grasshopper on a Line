Problem Link: https://codeforces.com/problemset/problem/1837/A

Solution:

#include <bits/stdc++.h>
using namespace std; 

int main() {
	ios_base::sync_with_stdio(0);
	cin.tie(0);

	int t;cin>>t;
	while(t--){
		int n,k;cin>>n>>k;

		if(n % k != 0){
			cout << 1 << endl;
			cout << n << endl;
			continue;
		}
		else{
			cout << 2 << endl;
			cout << n-1 << " " << 1 << endl;
		}
	}
}
